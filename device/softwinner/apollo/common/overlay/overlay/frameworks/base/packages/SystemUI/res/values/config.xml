<resources>
    <integer name="config_recents_max_icon_count">8</integer>

    <!-- Controls can query 2 preferred applications for limited number of suggested controls.
         This config value should contain a list of package names of thoses preferred applications.
    -->
    <string translatable="false" name="config_controlsPreferredPackages">
        com.google.android.apps.chromecast.app
    </string>
    <bool name="config_roundedCornerMultipleRadius">true</bool>
        <!-- Empty stub status/navigation bar -->
    <!-- com.android.systemui.statusbar.tv.TvStatusBar or com.android.systemui.statusbar.phone.StatusBar -->
    <string name="config_statusBarComponent" translatable="false">com.android.systemui.statusbar.tv.TvStatusBar</string>

    <!-- Disable KeyguardSerivce -->
    <bool name="config_enableKeyguardService">false</bool>

    <!-- homlet should use LEANBACK in Pip -->
    <bool name="config_leanback_feature">true</bool>
    <bool name="config_showNavigationBar">false</bool>
