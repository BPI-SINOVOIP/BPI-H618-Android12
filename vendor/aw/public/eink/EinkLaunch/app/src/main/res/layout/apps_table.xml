<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center_vertical">
        
        <TextView
            android:id="@+id/apps_table_libraries"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/libraries"
            android:drawableTop="@drawable/ic_library"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />
        
        <TextView
            android:id="@+id/apps_table_browser"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/browser"
            android:drawableTop="@drawable/ic_browser"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />
        
        <TextView
            android:id="@+id/apps_table_settings"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/settings"
            android:drawableTop="@drawable/ic_settings"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />
    </TableRow>
    
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/apps_table_files"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/files"
            android:drawableTop="@drawable/ic_files"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />
        
        <TextView
            android:id="@+id/apps_table_music"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:text="@string/music"
            android:drawableTop="@drawable/ic_music"
            />
        
        <TextView
            android:id="@+id/apps_table_applist"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:text="@string/apps"
            android:drawableTop="@drawable/ic_apps"
            />
    </TableRow>
</TableLayout>