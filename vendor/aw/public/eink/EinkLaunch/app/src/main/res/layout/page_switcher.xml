<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    >
    
	<TextView 
	    android:id="@+id/page_number_info"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@android:color/black"
	    android:textSize="24sp"
	    android:layout_centerInParent="true"
	    android:minEms="3"
	    android:layout_marginLeft="10dip"
	    android:layout_marginRight="10dip"
	    android:gravity="center"
	    android:textStyle="bold"
	    />
	
	<Button 
	    android:id="@+id/page_pre_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@android:color/black"
	    android:textSize="18sp"
	    android:layout_centerVertical="true"
	    android:layout_toLeftOf="@+id/page_number_info"
	    android:background="@drawable/bg_corner"
		android:minEms="4"
		android:gravity="center"
		android:text="@string/page_pre"
		android:textStyle="bold"
	    />
	
	<Button 
	    android:id="@+id/page_next_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@android:color/black"
	    android:textSize="18sp"
	    android:layout_centerVertical="true"
	    android:layout_toRightOf="@+id/page_number_info"
	    android:background="@drawable/bg_corner"
	    android:minEms="4"
	    android:gravity="center"
	    android:text="@string/page_next"
	    android:textStyle="bold"
	    />
</RelativeLayout>