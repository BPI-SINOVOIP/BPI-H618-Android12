################################################################################
## configurations.
################################################################################

########## option for os version config. ##########
OPTION_OS_VERSION_ANDROID_4_2 = 1
LOCAL_CFLAGS += -DOPTION_OS_VERSION_ANDROID_4_2=$(OPTION_OS_VERSION_ANDROID_4_2)
OPTION_OS_VERSION_ANDROID_4_4 = 2
LOCAL_CFLAGS += -DOPTION_OS_VERSION_ANDROID_4_4=$(OPTION_OS_VERSION_ANDROID_4_4)
OPTION_OS_VERSION_ANDROID_5_0 = 3
LOCAL_CFLAGS += -DOPTION_OS_VERSION_ANDROID_5_0=$(OPTION_OS_VERSION_ANDROID_5_0)
OPTION_OS_VERSION_ANDROID_6_0 = 4
LOCAL_CFLAGS += -DOPTION_OS_VERSION_ANDROID_6_0=$(OPTION_OS_VERSION_ANDROID_6_0)
OPTION_OS_VERSION_ANDROID_7_0 = 5
LOCAL_CFLAGS += -DOPTION_OS_VERSION_ANDROID_7_0=$(OPTION_OS_VERSION_ANDROID_7_0)
OPTION_OS_VERSION_ANDROID_8_0 = 6
LOCAL_CFLAGS += -DOPTION_OS_VERSION_ANDROID_8_0=$(OPTION_OS_VERSION_ANDROID_8_0)
OPTION_OS_VERSION_ANDROID_9_0 = 7
LOCAL_CFLAGS += -DOPTION_OS_VERSION_ANDROID_9_0=$(OPTION_OS_VERSION_ANDROID_9_0)
OPTION_OS_VERSION_ANDROID_10_0 = 8
LOCAL_CFLAGS += -DOPTION_OS_VERSION_ANDROID_10_0=$(OPTION_OS_VERSION_ANDROID_10_0)
OPTION_OS_VERSION_ANDROID_11_0 = 9
LOCAL_CFLAGS += -DOPTION_OS_VERSION_ANDROID_11_0=$(OPTION_OS_VERSION_ANDROID_11_0)
OPTION_OS_VERSION_ANDROID_12_0 = 10
LOCAL_CFLAGS += -DOPTION_OS_VERSION_ANDROID_12_0=$(OPTION_OS_VERSION_ANDROID_12_0)
OPTION_OS_VERSION_ANDROID_13_0 = 11
LOCAL_CFLAGS += -DOPTION_OS_VERSION_ANDROID_13_0=$(OPTION_OS_VERSION_ANDROID_13_0)
########## configure CONFIG_OS_VERSION ##########
os_version = $(shell echo $(PLATFORM_VERSION) | cut -c 1-3)
ifeq ($(os_version), 4.2)
    CONFIG_OS_VERSION = $(OPTION_OS_VERSION_ANDROID_4_2)
else ifeq ($(os_version), 4.4)
    CONFIG_OS_VERSION = $(OPTION_OS_VERSION_ANDROID_4_4)
else ifeq ($(os_version), 5.0)
    CONFIG_OS_VERSION = $(OPTION_OS_VERSION_ANDROID_5_0)
else ifeq ($(os_version), 5.1)
    CONFIG_OS_VERSION = $(OPTION_OS_VERSION_ANDROID_5_0)
else ifeq ($(os_version), 6.0)
    CONFIG_OS_VERSION = $(OPTION_OS_VERSION_ANDROID_6_0)
else ifeq ($(os_version), 7.0)
    CONFIG_OS_VERSION = $(OPTION_OS_VERSION_ANDROID_7_0)
else ifeq ($(os_version), 9)
    CONFIG_OS_VERSION = $(OPTION_OS_VERSION_ANDROID_9_0)
else ifeq ($(os_version), 10)
    CONFIG_OS_VERSION = $(OPTION_OS_VERSION_ANDROID_10_0)
else ifeq ($(os_version), 11)
    CONFIG_OS_VERSION = $(OPTION_OS_VERSION_ANDROID_11_0)
else ifeq ($(os_version), 12)
    CONFIG_OS_VERSION = $(OPTION_OS_VERSION_ANDROID_12_0)
else ifeq ($(os_version), 13)
    CONFIG_OS_VERSION = $(OPTION_OS_VERSION_ANDROID_13_0)
else
    $(error os version is -1, please re-check it.)
    CONFIG_OS_VERSION = -1
endif

#$(warning $(os_version) $(CONFIG_OS_VERSION) $(PLATFORM_VERSION))
LOCAL_CFLAGS += -DCONFIG_OS_VERSION=$(CONFIG_OS_VERSION)
