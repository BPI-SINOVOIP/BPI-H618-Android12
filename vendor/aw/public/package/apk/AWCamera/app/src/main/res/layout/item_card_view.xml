<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/cardView_filter_margin_left"
	android:layout_marginTop="@dimen/cardView_filter_margin_top"
	app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#90ffffff"
	>
    <ImageView
        android:id="@+id/iv_border"
        android:layout_width="@dimen/iv_filter_boder_size"
        android:layout_height="@dimen/iv_filter_boder_size"
        android:visibility="gone"
        android:background="#00ffff" />
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="@dimen/iv_filter_picture_size"
        android:layout_height="@dimen/iv_filter_picture_size"
        >
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/iv_filter_picture_size"
        android:layout_height="@dimen/iv_filter_picture_size"
        android:scaleType="fitXY"
        android:src="@mipmap/camera_effect_autofix" />
     <TextView
         android:id="@+id/tv_filter_type"
         android:layout_width="@dimen/iv_filter_picture_size"
         android:layout_height="30dp"
         android:background="#EE799F"
         android:text="@string/autoMode"
         android:textSize="15sp"
         android:gravity="center"
         android:textColor="#FFFFFF"
         android:layout_alignParentBottom="true"
         />
    </RelativeLayout>
</android.support.v7.widget.CardView>
