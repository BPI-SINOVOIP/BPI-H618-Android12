<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">
    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_host_height"
        layout="@layout/top_layout"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/rl_float_icon"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="40dp"
        >
        <com.allwinner.camera.views.CircleRotateImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/iv_circle_face_edit_bg"
            />
        <com.allwinner.camera.views.CircleRotateImageView
            android:layout_width="@dimen/iv_face_float_width"
            android:layout_height="@dimen/iv_face_float_height"
            android:src="@mipmap/ic_edit_normal"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_face_adjust"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/rl_face_adjust_height"
        android:layout_gravity="bottom"

        android:background="#40000000">

        <RelativeLayout
            android:id="@+id/cancel"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"

            android:layout_marginTop="@dimen/iv_face_cancle_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <com.allwinner.camera.views.CircleRotateImageView
            android:layout_width="@dimen/iv_face_float_bg_width"
            android:layout_height="@dimen/iv_face_float_bg_height"

            android:background="@drawable/iv_circle_cancel_bg"
            />

        <ImageView
            android:layout_width="@dimen/iv_face_cancle_width"
            android:layout_height="@dimen/iv_face_cancle_height"
            android:src="@mipmap/ic_cancel_normal"
            android:layout_centerInParent="true"
            />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/tv_face_setting_margin_top"
            android:text="@string/settings"
            >

        </TextView>
        <LinearLayout
            android:id="@+id/ll_smooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="@dimen/iv_face_cancle_margin_top"
            android:layout_below="@+id/cancel"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/smooth"
                />
            <SeekBar
                android:id="@+id/seekbar_bar_smooth"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:progress="50"
                />
            <TextView
                android:id="@+id/progress_smooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="50%"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_smooth"
            android:orientation="horizontal"

            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="@dimen/seekbar_margin_top"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/whitening"
                />
            <SeekBar
                android:id="@+id/seekbar_bar_white"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:progress="50"
                />
            <TextView
                android:id="@+id/progress_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="50%"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_bigeye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ll_white"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="@dimen/seekbar_margin_top"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/bigeye"
                />
            <SeekBar
                android:id="@+id/seekbar_bar_bigeye"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:progress="50"
                />
            <TextView
                android:id="@+id/progress_bigeye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="50%"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_bigeye"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="@dimen/seekbar_margin_top"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/slimmer_face"
                />
            <SeekBar
                android:id="@+id/seekbar_bar_facelift"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:progress="50"
                />
            <TextView
                android:id="@+id/progress_facelift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="50%"
                />
        </LinearLayout>

    </RelativeLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        layout="@layout/bottom_capture_layout"
        />


</FrameLayout>