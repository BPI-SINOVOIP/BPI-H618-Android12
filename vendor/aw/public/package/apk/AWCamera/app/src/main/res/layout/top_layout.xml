<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_host_height"
        android:background="#60000000"
        android:orientation="horizontal"
        >
    <RelativeLayout
        android:id="@+id/rl_flash"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:background="@drawable/selector_tabimage_background"
        android:layout_height="@dimen/top_host_height">
        <com.allwinner.camera.views.RotateImageView
            android:id="@+id/iv_flash"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iv_flash_height"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_flash_off_normal"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_timer"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:background="@drawable/selector_tabimage_background"
        android:layout_height="@dimen/top_host_height">
        <com.allwinner.camera.views.RotateImageView
            android:id="@+id/iv_timer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iv_timer_height"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_timer_off_normal"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_beauty"
        android:layout_height="@dimen/top_host_height"
        android:layout_weight="1"
        android:clickable="true"
        android:background="@drawable/selector_tabimage_background"
        android:gravity="center_vertical"
        android:layout_width="0dp">
        <com.allwinner.camera.views.RotateImageView
            android:id="@+id/iv_beauty"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iv_beauty_height"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_video_effects_faces_big_mouth_holo_dark"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl_filter"
            android:layout_height="@dimen/top_host_height"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/selector_tabimage_background"
            android:gravity="center_vertical"
            android:layout_width="0dp">
        <com.allwinner.camera.views.RotateImageView
            android:id="@+id/iv_filter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iv_filter_height"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_effects_holo_light"/>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_setting"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:background="@drawable/selector_tabimage_background"
        android:layout_height="@dimen/top_host_height">
        <com.allwinner.camera.views.RotateImageView
            android:id="@+id/iv_camera_settings"
            android:layout_width="match_parent"

            android:layout_height="@dimen/iv_setting_height"

            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_settings_normal"
            />
    </RelativeLayout>
    </LinearLayout>


