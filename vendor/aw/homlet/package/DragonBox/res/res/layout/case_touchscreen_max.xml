<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/case_touchscreen_fl">

    <ImageView
            android:id="@+id/case_touchscreen_iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/touchscreen" />

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:id="@+id/case_touchscreen_abs">

        <ImageView
            android:id="@+id/case_touchscreen_iv"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@drawable/touchscreen_block" />

    </AbsoluteLayout>

</FrameLayout>