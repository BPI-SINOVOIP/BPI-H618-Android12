<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
        <TextView
            android:id="@+id/case_sim_state"
            style="@style/CaseVersionMax"
            android:text="@string/phone_sim_state" />

        <TextView
            android:id="@+id/case_sim_signal_strength"
            style="@style/CaseVersionMax"
            android:text="@string/phone_signal_strength"/>

        <TextView
            android:id="@+id/case_sim_operator_name"
            style="@style/CaseVersionMax"
            android:text="@string/phone_sim_operator_name" />

        <TextView
            android:id="@+id/case_sim_phone_number"
            style="@style/CaseVersionMax"
            android:text="@string/phone_sim_phone_number" />

        <TextView
            android:id="@+id/case_sim_imsi"
            style="@style/CaseVersionMax"
            android:text="@string/phone_sim_imsi" />

        <TextView
            android:id="@+id/case_sim_serial_number"
            style="@style/CaseVersionMax"
            android:text="@string/phone_sim_serial_number" />
</LinearLayout>
