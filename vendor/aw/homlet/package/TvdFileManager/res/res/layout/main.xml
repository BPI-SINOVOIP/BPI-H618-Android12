<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg" >

    <!-- 按键菜单 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <com.softwinner.view.MyButton
            style="@style/navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/menu_equipment"
            android:text="@string/equipment"
            android:textSize="@dimen/sp_20"
            android:id="@+id/device_button"
            android:background="#00000000"
            android:focusable="false"/>

        <com.softwinner.view.MyButton
            style="@style/navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/menu_video"
            android:text="@string/video"
            android:textSize="@dimen/sp_20"
            android:id="@+id/video_button"
            android:background="#00000000"
            android:focusable="false"/>
        <com.softwinner.view.MyButton
            style="@style/navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/menu_picture"
            android:text="@string/picture"
            android:textSize="@dimen/sp_20"
            android:id="@+id/picture_button"
            android:background="#00000000"
            android:focusable="false"/>
        <com.softwinner.view.MyButton
            style="@style/navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/menu_music"
            android:text="@string/music"
            android:textSize="@dimen/sp_20"
            android:id="@+id/music_button"
            android:background="#00000000"
            android:focusable="false"/>
        <com.softwinner.view.MyButton
            style="@style/navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/menu_file"
            android:text="@string/file"
            android:textSize="@dimen/sp_20"
            android:id="@+id/file_button"
            android:background="#00000000"
            android:focusable="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_3"
        android:background="#FF33B5E5" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#FF262626" >
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
        <!-- 预览信息 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:layout_marginLeft="@dimen/dp_65"
            android:layout_marginRight="@dimen/dp_65"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginBottom="@dimen/dp_65" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="@color/black"
                android:id="@+id/thumb"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/thumbnail_bg"
                    android:id="@+id/thumbnail" />
                <SurfaceView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/thumb_movie"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2">
                <com.softwinner.view.MTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/preview"
                    android:background="@drawable/preview"
                    android:paddingTop="@dimen/dp_20"
                    android:textSize="@dimen/sp_20" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_height="wrap_content"
            android:layout_width="@dimen/dp_4"
            android:background="@drawable/interval" />
        <!-- 列表信息 -->
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/android:list"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/divider"
            android:layout_marginTop="@dimen/dp_50"
            android:focusable="true"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:dividerHeight="1dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/path"
            android:layout_width="@dimen/dp_500"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_20"
            android:singleLine="true"
            android:ellipsize="middle"/>
        <TextView
            android:id="@+id/index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_20"
            android:singleLine="true"/>
    </RelativeLayout>
</LinearLayout>
