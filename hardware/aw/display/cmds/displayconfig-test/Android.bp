cc_defaults {
    name: "cplus_defaults",
    vendor: true,
    enabled: true,
    cflags: [
        "-Wall",
        "-Wunreachable-code",
        "-Werror",
        "-Wformat",
        "-Wthread-safety",
        "-Wunused",
        "-Wunreachable-code",
        "-Wno-unused-const-variable",
    ],
    include_dirs: [
        "system/core/include",
        "hardware/libhardware/include",
        "hardware/aw/display/include",
    ],
    shared_libs: [
        "libutils",
        "libcutils",
        "liblog",
        "libbinder",
        "libhidlbase",
//        "libhidltransport",
        "vendor.display.config@1.0",
    ],
}

cc_binary {
    name: "dispconfig",
    defaults: ["cplus_defaults"],
    srcs: [
        "dispconfig.cpp",
        "modes.cpp",
    ],
}

cc_binary {
    name: "hdcptool",
    defaults: ["cplus_defaults"],
    srcs: [
        "hdcptool.cpp",
    ],
}

cc_binary {
    name: "snrdebug",
    defaults: ["cplus_defaults"],
    srcs: [
        "snrdebug.cpp",
    ],
}

cc_binary {
    name: "enhance",
    defaults: ["cplus_defaults"],
    srcs: [
        "enhance.cpp",
    ],
}

cc_binary {
    name: "hdmi_native_mode",
    defaults: ["cplus_defaults"],
    srcs: [
        "hdmi_native_mode.cpp",
    ],
}
